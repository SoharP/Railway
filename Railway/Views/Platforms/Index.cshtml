@model IEnumerable<Railway.Models.Platform>

@{
    ViewData["Title"] = "Index";
}

<h1>Platforms</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlatformID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlatformID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlatformID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

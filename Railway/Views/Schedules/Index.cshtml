@model IEnumerable<Railway.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TainID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Routed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weekdays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TainID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Routed.RoutedID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weekdays.WeekdaysID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ScheduleID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ScheduleID">Details</a> |
